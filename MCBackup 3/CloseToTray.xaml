<Window x:Name="CloseToTrayWindow" x:Class="CloseToTray"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="CloseToTray" Height="145" Width="305" WindowStartupLocation="CenterOwner">
    <Grid Width="292" HorizontalAlignment="Left" Height="109" VerticalAlignment="Top">
        <Button x:Name="YesButton" Content="Yes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="67,46,0,0"/>
        <Button x:Name="NoButton" Content="No" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="150,46,0,0"/>
        <Label Content="Would you like to close MCBackup to tray?" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.763,0.923" Margin="10,10,0,0" Width="272" HorizontalContentAlignment="Center"/>
        <CheckBox x:Name="SaveCheckBox" Content="Always do this in the future" VerticalAlignment="Top" Margin="61,78,61,0"/>
    </Grid>
</Window>
