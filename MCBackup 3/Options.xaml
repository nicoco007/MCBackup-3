<Window x:Class="Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Options" Height="275" Width="700" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="White">
    <Grid Height="236" Margin="0,0,10,10" Width="684">
        <Canvas x:Name="GeneralPanel" HorizontalAlignment="Left" Height="191" VerticalAlignment="Top" Width="567" Margin="117,10,0,0">
            <CheckBox x:Name="ShowBalloonTipsCheckBox" Content="Show balloon tips" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="9" Canvas.Top="13" ToolTipService.ShowOnDisabled="True" IsChecked="True" ToolTip="Show a ballon tip when a backup/restore finishes or fails"/>
            <CheckBox Content="Show delete confirmation" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="9" Canvas.Top="35" ToolTip="Not Implemented" ToolTipService.ShowOnDisabled="True" IsEnabled="False" IsChecked="True"/>
            <CheckBox x:Name="CheckForUpdatesCheckBox" Content="Check for updates" Canvas.Left="9" Canvas.Top="55" ToolTip="Automatically check for updates on startup" IsChecked="True"/>
            <CheckBox x:Name="AlwaysCloseCheckBox" Content="Always" Canvas.Left="358" Canvas.Top="16"/>
            <RadioButton x:Name="CloseCompletelyRadioButton" Content="Close completely" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="419" Canvas.Top="35"/>
            <RadioButton x:Name="CloseToTrayRadioButton" Content="Close to tray" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="419" Canvas.Top="16"/>
            <TextBlock Text="Note: You can close MCBackup from the tray by right-clicking on it's icon." HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="358" Canvas.Top="61" Width="199" TextWrapping="WrapWithOverflow" Height="35"/>
            <CheckBox x:Name="CreateThumbOnWorldCheckBox" Content="Create thumbnail on world backup" Canvas.Left="9" Canvas.Top="75" IsChecked="True"/>
        </Canvas>
        <ListBox x:Name="ListBox" HorizontalAlignment="Left" Width="102" Margin="10,10,0,35">
            <ListBoxItem Content="General"/>
            <ListBoxItem Background="White" Content="Appearance"/>
            <ListBoxItem Content="Folders"/>
        </ListBox>
        <Canvas x:Name="FoldersPanel" HorizontalAlignment="Left" Height="191" VerticalAlignment="Top" Width="567" Margin="117,10,0,0">
            <Label Content="Minecraft Folder Location" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="6" Canvas.Top="6"/>
            <Label Content="Backups Folder Location" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="13" Canvas.Top="64"/>
            <TextBox x:Name="MinecraftFolderTextBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="321" IsReadOnly="True" Canvas.Left="156" Canvas.Top="7"/>
            <TextBox x:Name="BackupsFolderTextBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="321" IsReadOnly="True" Canvas.Left="156" Canvas.Top="65"/>
            <Button x:Name="BrowseBackupsFolderButton" Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Canvas.Left="482" Canvas.Top="66"/>
            <Button x:Name="BrowseMinecraftFolderButton" Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Canvas.Left="482" Canvas.Top="8"/>
            <Label Content="Saves Folder Location" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="26" Canvas.Top="35"/>
            <TextBox x:Name="SavesFolderTextBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="321" IsReadOnly="True" Canvas.Left="156" Canvas.Top="36"/>
            <Button x:Name="BrowseSavesFolderButton" Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Canvas.Left="482" Canvas.Top="37"/>
        </Canvas>
        <Button x:Name="CloseButton" Content="Close" VerticalAlignment="Top" Margin="309,206,0,0" HorizontalAlignment="Left" Width="77"/>
        <Canvas x:Name="AppearancePanel" HorizontalAlignment="Left" Height="191" VerticalAlignment="Top" Width="567" Margin="117,10,0,0">
            <Label Content="ListView Opacity" Canvas.Left="10" Canvas.Top="10"/>
            <Slider x:Name="ListViewOpacitySlider" Width="412" Canvas.Left="112" Canvas.Top="14" ValueChanged="ListViewOpacitySlider_ValueChanged" Maximum="100" Minimum="50" Value="75"/>
            <Label Content="Background Image" Canvas.Left="10" Canvas.Top="46"/>
            <Button x:Name="BackgroundImageBrowseButton" Content="Browse" Canvas.Left="126" Canvas.Top="49" Width="77"/>
            <Label x:Name="OpacityPercentLabel" Content="100%" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="524" Canvas.Top="6"/>
            <Button x:Name="BackgroundImageRemoveButton" Content="Remove" HorizontalAlignment="Left" VerticalAlignment="Top" Width="77" Canvas.Left="207" Canvas.Top="49"/>
            <ComboBox x:Name="BackgroundImageStyle" Width="120" Canvas.Left="126" Canvas.Top="85" SelectedIndex="0">
                <ComboBoxItem Content="Normal"/>
                <ComboBoxItem Content="Stretch"/>
                <ComboBoxItem Content="Auto Size"/>
                <ComboBoxItem Content="Zoom"/>
            </ComboBox>
            <Label Content="Size Mode" Canvas.Left="10" Canvas.Top="81" Width="110"/>
        </Canvas>
    </Grid>
</Window>
