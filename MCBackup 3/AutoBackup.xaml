<Window x:Name="AutoBackupWindow" x:Class="AutoBackup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Automatic Backup" Height="480" Width="305" ResizeMode="CanMinimize">
    <Grid Width="294" HorizontalAlignment="Left" Height="446" VerticalAlignment="Top">
        <Label x:Name="TimeLabel" Content="00:00" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="100" Width="274" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="64"/>
        <TextBox x:Name="MinutesTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="15" VerticalAlignment="Top" Width="39" Margin="115,120,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0"/>
        <RepeatButton x:Name="PlusRepeatButton" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="23" Margin="187,120,0,0" Content="+" FontSize="20" Padding="0,-5,0,0" VerticalContentAlignment="Center" RenderTransformOrigin="1.217,1.957"/>
        <RepeatButton x:Name="MinusRepeatButton" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="23" Margin="159,120,0,0" Content="-" FontSize="20" Padding="0,-5,0,0" VerticalContentAlignment="Center"/>
        <Label Content="Backup every" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,119,0,0"/>
        <Label Content="minutes" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,119,0,0"/>
        <TextBox x:Name="PrefixTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="[AUTO] " VerticalAlignment="Top" Width="89" Margin="34,343,0,0" HorizontalContentAlignment="Right"/>
        <Label Content="hhmmss" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="123,340,0,0"/>
        <TextBox x:Name="SuffixTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="89" Margin="177,343,0,0"/>
        <Label Content="Backups will save as" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="34,312,0,0" Width="232" HorizontalContentAlignment="Center"/>
        <Label Content="(Prefix)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="34,360,0,0" Width="89" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label Content="(Suffix)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="177,360,0,0" Width="89" HorizontalContentAlignment="Center" FontSize="10"/>
        <Button x:Name="StartButton" Content="Start" VerticalAlignment="Top" Margin="72,392,0,0" Height="40" FontSize="24" Width="150" HorizontalAlignment="Left"/>
        <ListBox x:Name="SaveListBox" HorizontalAlignment="Left" Height="102" VerticalAlignment="Top" Width="274" Margin="10,179,0,0"/>
        <TextBlock Text="World to back up:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,159,0,0" Height="20"/>
        <Button x:Name="RefreshButton" Content="Refresh" Margin="209,283,10,143"/>
        <TextBlock x:Name="WorldNameLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="112,159,0,0" Width="172" Height="20" TextTrimming="WordEllipsis"/>
    </Grid>
</Window>
