<Window x:Name="AutoBackupWindow" x:Class="AutoBackup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Automatic Backup" Height="500" Width="305" ResizeMode="CanMinimize">
    <Grid Margin="0,0,-2,-2">
        <Label x:Name="TimeLabel" Content="00:00" Margin="10,10,15,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="64" Height="100" VerticalAlignment="Top"/>
        <TextBox x:Name="PrefixTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="[AUTO] " VerticalAlignment="Bottom" Width="89" Margin="36,0,0,90" HorizontalContentAlignment="Right"/>
        <Label Content="hhmmss" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="125,0,0,90"/>
        <TextBox x:Name="SuffixTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="89" Margin="179,0,0,90"/>
        <Label Content="Backups will save as" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="36,0,0,118" Width="232" HorizontalContentAlignment="Center"/>
        <Label Content="(Prefix)" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="36,0,0,73" Width="89" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label Content="(Suffix)" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="179,0,0,73" Width="89" HorizontalContentAlignment="Center" FontSize="10"/>
        <Button x:Name="StartButton" Content="Start" Margin="74,0,0,24" FontSize="24" Width="150" HorizontalAlignment="Left" Height="40" VerticalAlignment="Bottom"/>
        <ListBox x:Name="SaveListBox" Margin="10,179,15,190"/>
        <TextBlock Text="World to back up:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,159,0,0" Height="20"/>
        <Button x:Name="RefreshButton" Content="Refresh" Margin="0,0,16,164" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <TextBlock x:Name="WorldNameLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="112,159,0,0" Width="172" Height="20" TextTrimming="WordEllipsis"/>
        <Canvas Height="39" VerticalAlignment="Top" Margin="20,110,20,0">
            <TextBox x:Name="MinutesTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="15" VerticalAlignment="Top" Width="39" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0" Canvas.Left="89" Canvas.Top="7"/>
            <RepeatButton x:Name="PlusRepeatButton" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="23" Content="+" FontSize="20" Padding="0,-5,0,0" VerticalContentAlignment="Center" RenderTransformOrigin="1.217,1.957" Canvas.Left="161" Canvas.Top="7"/>
            <RepeatButton x:Name="MinusRepeatButton" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="23" Content="-" FontSize="20" Padding="0,-5,0,0" VerticalContentAlignment="Center" Canvas.Left="133" Canvas.Top="7"/>
            <Label Content="Backup every" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="9" Canvas.Top="6"/>
            <Label Content="minutes" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="184" Canvas.Top="6"/>
        </Canvas>
    </Grid>
</Window>
